<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ActionSheet
		title="Choose Your Action"
		showCancelButton="true"
		placement="Bottom">
			<Button text="Create" icon="sap-icon://create" press="onActionCreate" />
			<Button text="Delete" icon="sap-icon://delete" press="onActionDelete" />
			<Button text="Edit" icon="sap-icon://edit" press="onActionEdit" />
	</ActionSheet>
</core:FragmentDefinition>