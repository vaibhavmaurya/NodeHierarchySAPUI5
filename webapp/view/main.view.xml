<mvc:View controllerName="IOT.HierarchyModule.controller.main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:f="sap.f" xmlns:iot="iot.ma.iot" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout">
	<App id="idAppControl">
		<pages>
			<f:DynamicPage id="dynamicPageId">
				<!-- DynamicPage Title -->
				<f:title>
					<f:DynamicPageTitle>
						<f:heading>
							<Title text="Type Subtype Hierarchy"/>
						</f:heading>
						<f:actions>
							<ToolbarSpacer/>
						</f:actions>
					</f:DynamicPageTitle>
				</f:title>
				<!-- DynamicPage Header -->
				<f:header>
					<f:DynamicPageHeader pinnable="true">
						<FlexBox alignItems="Center" justifyContent="Center">
							<items>
								<FlexBox width="100%" alignItems="Center" justifyContent="Center">
									<items>
										<FlexBox direction="Column" class="sapUiTinyMargin">
											<items>
												<FlexBox alignItems="End" justifyContent="SpaceBetween">
													<items>
														<Title text="Type"/>
														<HBox>
															<Button icon="sap-icon://add" type="Transparent"/>
															<Button icon="sap-icon://delete" type="Transparent"/>
														</HBox>
													</items>
												</FlexBox>
												<ComboBox showSecondaryValues="true" items="{ path: '/Types', sorter: { path: 'name' } }" selectionChange="onTypeChange">
													<core:ListItem key="{key}" text="{name}" additionalText="{key}"/>
												</ComboBox>
											</items>
										</FlexBox>
										<FlexBox direction="Column" class="sapUiTinyMargin">
											<items>
												<FlexBox alignItems="End" justifyContent="SpaceBetween">
													<items>
														<Title text="Sub Type"/>
														<HBox>
															<Button icon="sap-icon://add" type="Transparent"/>
															<Button icon="sap-icon://delete" type="Transparent"/>
														</HBox>
													</items>
												</FlexBox>
												<ComboBox id="idSubType" showSecondaryValues="true" items="{ path: '/subtypes', sorter: { path: 'name' } }" selectionChange="onSubTypeChange">
													<core:ListItem key="{key}" text="{name}" additionalText="{key}"/>
												</ComboBox>
											</items>
										</FlexBox>
									</items>
								</FlexBox>
							</items>
						</FlexBox>
					</f:DynamicPageHeader>
				</f:header>
				<!-- DynamicPage Content -->
				<f:content></f:content>
				<!-- DynamicPage Footer -->
				<f:footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button type="Accept" text="Accept"/>
						<Button type="Reject" text="Reject"/>
					</OverflowToolbar>
				</f:footer>
			</f:DynamicPage>
		</pages>
	</App>
</mvc:View>